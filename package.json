{
    "name": "guacamole-rapper",
    "version": "1.0.0",
    "description": "Electron wrapper for Apache Guacamole web interface",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder build --win --x64",
        "build:dir": "electron-builder build --win --x64 --dir"
    },
    "keywords": [
        "guacamole",
        "electron",
        "wrapper",
        "remote-desktop"
    ],
    "author": "Saarthaksr7",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Saarthaksr7/Guacamole-rapper"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "electron-packager": "^17.1.2",
        "electron-winstaller": "^5.4.0",
        "png-to-ico": "^3.0.1"
    },
    "dependencies": {
        "electron-store": "^8.1.0"
    },
    "build": {
        "appId": "com.saarthaksr7.guacamole-rapper",
        "productName": "Guacamole Wrapper",
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "icon.png",
            "certificateFile": null,
            "certificatePassword": null,
            "signingHashAlgorithms": []
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "files": [
            "main.js",
            "preload.js",
            "index.html",
            "settings.html",
            "settings.js",
            "styles.css",
            "icon.png"
        ]
    }
}
